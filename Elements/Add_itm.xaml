<UserControl x:Class="PhoneBook_Klimov.Elements.Add_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneBook_Klimov.Elements"
             mc:Ignorable="d">
    <Border x:Name="border" Opacity="1" Margin="10" Height="80" CornerRadius="7">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml"/>
            </Grid.Resources>

            <Button Style="{StaticResource BtnRedac}" Background="#FF2C2C2C" Margin="0,0,0,10" Height="50"
                    VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Click="Click_add">
                <Image Source="/img/plus.png" Width="20" Height="20"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
